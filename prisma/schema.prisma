// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  login    String
  password String
  tasks    Task[]
}

model Board {
  id      String        @id @default(uuid())
  title   String
  columns BoardColumn[]
  tasks   Task[]
}

model BoardColumn {
  id      String @id @default(uuid())
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  boardId String
  title   String
  order   Int
  Task    Task[]
}

model Task {
  id          String       @id @default(uuid())
  title       String
  order       Int
  description String
  user        User?        @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId      String?
  board       Board?       @relation(fields: [boardId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  boardId     String?
  column      BoardColumn? @relation(fields: [columnId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  columnId    String?
}
